<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.letop3.ktsh.controller.LoadingController" fx:id="root">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <Circle fx:id="loadingCircle" fill="TRANSPARENT" stroke="BLACK" strokeWidth="2.0" radius="20.0"/>
        <ProgressBar fx:id="progressBar" prefWidth="300.0"/>
        <Label fx:id="messageLabel" text="Chargement en cours..."/>
    </VBox>
</AnchorPane>

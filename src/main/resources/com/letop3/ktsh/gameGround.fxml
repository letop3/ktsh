<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.letop3.ktsh.controller.GameController" stylesheets="@style.css">
   <top>
      <Label text="Kill To Save Her" BorderPane.alignment="CENTER">
         <font>
             <Font size="28.0"/>
         </font>
      </Label>
   </top>
    <center>
        <StackPane maxHeight="1056.0" maxWidth="1056.0" minHeight="1056.0" minWidth="1056.0"
                   BorderPane.alignment="CENTER" onMouseClicked="#coord">
            <children>
                <TilePane fx:id="gameGround" prefHeight="1056.0" prefWidth="1056.0"/>
                <Pane fx:id="entityPane"/>
                <Pane fx:id="gamePlayer" prefHeight="1056.0" prefWidth="1056.0"/>
                <Pane fx:id="itemEffectPane" maxHeight="1056.0" maxWidth="1056.0" minHeight="1056.0" minWidth="1056.0"/>
                <Canvas fx:id="heartCanvas" width="1056.0" height="1056.0" />
                <Pane fx:id="slotPane" maxHeight="1056.0" maxWidth="1056.0" minHeight="1056.0" minWidth="1056.0" />
                <Pane fx:id="stuffPane" maxHeight="1056.0" maxWidth="1056.0" minHeight="1056.0" minWidth="1056.0" visible="false"/>
            </children>
        </StackPane>
    </center>
       <bottom>
        <GridPane fx:id="dialogueBox" prefHeight="100.0" visible="false" BorderPane.alignment="CENTER" >
            <children>
                <Label fx:id="dialogueText" text="Text" alignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ListView fx:id="dialogueResponses" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            </children>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
            </columnConstraints>
        </GridPane>
    </bottom>
</BorderPane>

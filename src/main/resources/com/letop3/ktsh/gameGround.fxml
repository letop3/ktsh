<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.letop3.ktsh.controller.GameGroundController">
   <top>
      <Label text="Kill To Save Her" BorderPane.alignment="CENTER">
         <font>
             <Font size="28.0"/>
         </font>
      </Label>
   </top>
    <center>
        <StackPane maxHeight="354.0" maxWidth="354.0" minHeight="354.0" minWidth="354.0" prefHeight="354.0"
                   prefWidth="354.0" BorderPane.alignment="CENTER">
            <children>
                <TilePane fx:id="gameGround" prefHeight="200.0" prefWidth="200.0"/>
                <Pane fx:id="gamePlayer" prefHeight="200.0" prefWidth="200.0"/>
            </children>
        </StackPane>
    </center>
    <right>
        <VBox>
            <children>
                <Label text="Inventaire"/>
                <ListView fx:id="inventaireListView" onMouseClicked="#handleInventaireClick"/>

                <HBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <children>
                        <VBox>
                            <Label text="Main Gauche"/>
                            <Label fx:id="mainGLabel" onMouseClicked="#handleMainGLabelClick"/>
                        </VBox>
                        <VBox>
                            <Label text="Main Droite"/>
                            <Label fx:id="mainDLabel" onMouseClicked="#handleMainDLabelClick"/>
                        </VBox>
                        <VBox>
                            <Label text="Quick Slot"/>
                            <Label fx:id="quickSlotLabel" onMouseClicked="#handleQuickSlotLabelClick"/>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
